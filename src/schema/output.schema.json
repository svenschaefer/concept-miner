{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/output.schema.json",
  "title": "Generic Output",
  "type": "object",
  "required": ["stage", "records"],
  "properties": {
    "stage": {
      "type": "string",
      "const": "output"
    },
    "schema_version": {
      "type": "string"
    },
    "source_text": {
      "type": "string"
    },
    "records": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "value", "tags"],
        "properties": {
          "id": { "type": "string" },
          "value": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
