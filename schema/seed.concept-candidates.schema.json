{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://secos.example/schema/seed.concept-candidates.schema.json",
  "title": "Seed Concept Candidates",
  "type": "object",
  "required": [
    "schema_version",
    "seed_id",
    "stage",
    "concept_candidates"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "seed_id": {
      "type": "string",
      "minLength": 1
    },
    "stage": {
      "type": "string",
      "const": "concept_candidates"
    },
    "concept_candidates": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/conceptCandidate"
      }
    }
  },
  "$defs": {
    "conceptCandidate": {
      "type": "object",
      "required": [
        "concept_id",
        "canonical",
        "surfaces",
        "mention_ids",
        "assertion_ids",
        "roles",
        "wikipedia_title_index"
      ],
      "additionalProperties": false,
      "properties": {
        "concept_id": {
          "type": "string",
          "pattern": "^cc_[0-9a-f]{16}$"
        },
        "canonical": {
          "type": "string",
          "minLength": 1
        },
        "surfaces": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "mention_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "assertion_ids": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "roles": {
          "type": "object",
          "required": [
            "actor",
            "theme",
            "attr",
            "topic",
            "location",
            "other"
          ],
          "properties": {
            "actor": {
              "type": "integer",
              "minimum": 0
            },
            "theme": {
              "type": "integer",
              "minimum": 0
            },
            "attr": {
              "type": "integer",
              "minimum": 0
            },
            "topic": {
              "type": "integer",
              "minimum": 0
            },
            "location": {
              "type": "integer",
              "minimum": 0
            },
            "other": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": false
        },
        "wikipedia_title_index": {
          "type": "object",
          "description": "Aggregated upstream wikipedia_title_index wiki_* signal fields (counts + booleans)",
          "minProperties": 1,
          "patternProperties": {
            "^wiki_[a-zA-Z0-9_]+_count$": {
              "type": "integer",
              "minimum": 0
            },
            "^wiki_(?!.*_count$)[a-zA-Z0-9_]+$": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        "wikipedia_title_index_evidence": {
          "type": "object",
          "required": [
            "wikipedia_title_index_policy",
            "mention_contributions"
          ],
          "additionalProperties": false,
          "properties": {
            "wikipedia_title_index_policy": {
              "type": "string",
              "enum": [
                "assertion_then_lexicon_fallback",
                "assertion_only"
              ]
            },
            "mention_contributions": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "mention_id",
                  "source",
                  "assertion_signals",
                  "lexicon_signals",
                  "selected_signals"
                ],
                "additionalProperties": false,
                "properties": {
                  "mention_id": {
                    "type": "string",
                    "minLength": 1
                  },
                  "source": {
                    "type": "string",
                    "enum": [
                      "none",
                      "assertion",
                      "lexicon_fallback",
                      "assertion_and_lexicon"
                    ]
                  },
                  "assertion_signals": {
                    "type": "object",
                    "patternProperties": {
                      "^wiki_[a-zA-Z0-9_]+_count$": {
                        "type": "integer",
                        "minimum": 0
                      },
                      "^wiki_(?!.*_count$)[a-zA-Z0-9_]+$": {
                        "type": "boolean"
                      }
                    },
                    "additionalProperties": false
                  },
                  "lexicon_signals": {
                    "type": "object",
                    "patternProperties": {
                      "^wiki_[a-zA-Z0-9_]+_count$": {
                        "type": "integer",
                        "minimum": 0
                      },
                      "^wiki_(?!.*_count$)[a-zA-Z0-9_]+$": {
                        "type": "boolean"
                      }
                    },
                    "additionalProperties": false
                  },
                  "selected_signals": {
                    "type": "object",
                    "patternProperties": {
                      "^wiki_[a-zA-Z0-9_]+_count$": {
                        "type": "integer",
                        "minimum": 0
                      },
                      "^wiki_(?!.*_count$)[a-zA-Z0-9_]+$": {
                        "type": "boolean"
                      }
                    },
                    "additionalProperties": false
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
