{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://concept-miner.example/schema/concepts.schema.json",
  "title": "Concepts Document",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "concepts"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "input_id": {
      "type": "string",
      "minLength": 1
    },
    "concepts": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/concept"
      }
    },
    "meta": {
      "$ref": "#/$defs/responseMeta"
    }
  },
  "$defs": {
    "concept": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^(c_[0-9a-f]{12}|cc_[0-9a-f]{16})$"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "surface_forms": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "occurrences": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/occurrence"
          }
        },
        "signals": {
          "$ref": "#/$defs/signals"
        },
        "properties": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "occurrence": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "start",
        "end"
      ],
      "properties": {
        "start": {
          "type": "integer",
          "minimum": 0,
          "description": "Start offset in UTF-16 code units."
        },
        "end": {
          "type": "integer",
          "minimum": 0,
          "description": "End offset in UTF-16 code units (exclusive)."
        },
        "text": {
          "type": "string"
        },
        "source": {
          "type": "string"
        }
      }
    },
    "signals": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "strength": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        }
      }
    },
    "responseMeta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "concept_count": {
          "type": "integer",
          "minimum": 0
        },
        "service": {
          "$ref": "#/$defs/serviceMeta"
        }
      }
    },
    "serviceMeta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "build": {
          "type": "string"
        },
        "deterministic": {
          "type": "boolean"
        }
      }
    }
  }
}
